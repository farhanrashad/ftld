<odoo>
  <data>
      <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='email_template_and_project']" position="attributes">
                <attribute name="string">Banner</attribute>
            </xpath>
            <xpath expr="//group[@name='email_template_and_project']" position="inside">
                <field name="is_banner"/>
                <field name="main_desc"/>
                <field name="flavor_desc"/>
                <field name="product_image" options="{&quot;size&quot;:[0,90]}" widget="image"/>
                <field name="background_image" options="{&quot;size&quot;:[0,90]}" widget="image"/>
            </xpath>
        </field>
      </record>
