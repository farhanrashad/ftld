<odoo>
    <data>
        <template id="de_website_tiered_pricing_products_item" inherit_id="website_sale.products_item" >
        <xpath expr="//div[@itemprop='offers']" position="before">
            <t t-set="website_sale_pricelists" t-value="website.get_current_pricelist()"/>
                <t t-foreach="website_sale_pricelists" t-as="pricelist">
                    <div class="pro-tiered-pricing">
                    <t t-foreach="pricelist.item_ids" t-as="offer">
                        <t t-if="offer.product_tmpl_id.id==product.id">
                            <span style="display:block;text-align:left;">Buy <t t-esc="offer.min_quantity"/> for <t t-esc="offer.currency_id.name"/><t t-if="offer.compute_price=='percentage'"><t t-esc="offer.percent_price"/></t><t t-elif="offer.compute_price=='fixed'"><t t-esc="offer.fixed_price"/></t><t t-elif="offer.compute_price=='formula'"><t t-esc="offer.price_on_basepricelist"/></t> <t t-esc="offer.product_tmpl_id.uom_id.name"/>
                            </span>                                  
                        </t>
                    </t>
                    </div>
            </t>
        </xpath>
    </template>
        
    <template id="de_website_tiered_pricing_products_item_carousel" inherit_id="website_product_dynamic_carousel.snippet_products_item" >
        <xpath expr="//div[@itemprop='offers']" position="before">
            <t t-set="website_sale_pricelists" t-value="website.get_current_pricelist()"/>
                <t t-foreach="website_sale_pricelists" t-as="pricelist">
                    <t t-foreach="pricelist.item_ids" t-as="offer">
                        <t t-if="offer.product_tmpl_id.id==product.id">
                            <div>Buy <t t-esc="offer.min_quantity"/> for <t t-esc="offer.currency_id.name"/><t t-if="offer.compute_price=='percentage'"><t t-esc="offer.percent_price"/></t><t t-elif="offer.compute_price=='fixed'"><t t-esc="offer.fixed_price"/></t><t t-elif="offer.compute_price=='formula'"><t t-esc="offer.price_on_basepricelist"/></t><t t-esc="offer.product_tmpl_id.uom_id.name"/>
                            </div>                                  
                      </t>
                        
                </t>
            </t>
        </xpath>
    </template>
        

    <template id="de_website_tiered_pricing_product" inherit_id="website_sale.product_price" >
        <xpath expr="//div[@itemprop='offers']" position="before">
            
            <table class="table table-striped table-condensed text-center" id="pricelist_details" >
                <thead>
                    <tr>
                        <th width="100" class="text-center">Minimum Quantity</th>
                        <th width="100" class="text-center">Price</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="website_sale_pricelists" t-value="website.get_current_pricelist()"/>
                <t t-foreach="website_sale_pricelists" t-as="pricelist">
                    <t t-foreach="pricelist.item_ids" t-as="offer">
                        <t t-if="offer.product_tmpl_id.id==product.id">
                    <tr>
                        <td><t t-esc="offer.min_quantity"/></td>
                        <td><t t-if="offer.compute_price=='percentage'"><t t-esc="offer.percent_price"/></t><t t-elif="offer.compute_price=='fixed'"><t t-esc="offer.fixed_price"/></t><t t-elif="offer.compute_price=='formula'"><t t-esc="offer.price_on_basepricelist"/></t></td>
                    </tr>
                        </t>
                    </t>
                </t>
                </tbody>
            </table>
        </xpath>   
    </template>
