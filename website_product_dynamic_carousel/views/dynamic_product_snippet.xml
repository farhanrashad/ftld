    <template id="website_product_dynamic_carousel.s_collection_configure" name="Collection coursol">
        <div class="container h_tab_prod_snip" t-if="obj" contentEditable="false">
            <div class="product_slide">
                <div class="seaction-head">
                    <h2 t-field="obj.name" />
                </div>
            </div>
            <div class="multi_tab_slider">
                <t t-if="obj and obj.tab_collection_ids">
                    <ul class="nav nav-tabs" role="tablist">
                        <t t-foreach="obj.tab_collection_ids" t-as="collection">
                            <li class="nav-item" role="presentation">
                                <a t-att-class="'nav-link active' if obj.tab_collection_ids[0].id==collection.id else 'nav-link'" t-att-href="'#more_info_%s' %(collection.id)" aria-controls="more_info" role="tab" data-toggle="tab">
                                    <t t-esc="collection.name" />
                                </a>
                            </li>
                        </t>
                    </ul>
                    <div class="tab-content">
                        <t t-foreach="obj.tab_collection_ids" t-as="collection">
                            <div role="tabpanel" t-att-class="'tab-pane active' if obj.tab_collection_ids[0].id==collection.id else 'tab-pane'" t-att-id="'more_info_%s' %(collection.id)">
                                <div class="multiHorizontal-slider-see_all single-slider2-see_all">
                                    <a t-att-href="'/shop/product_collection/%s' % slug(collection)">See All Products</a>
                                </div>
                                <t t-set="products" t-value="collection.product_ids.sudo().filtered(lambda p: p.product_id.website_published)"/>
                                <t t-if="products">
                                    <div class="owl-carousel thumbnails-slides multi_slider">
                                        <t t-foreach="products" t-as="product_x">
                                            <t t-set="product" t-value="product_x.product_id" />
                                            <t t-call="website_product_dynamic_carousel.snippet_products_item" />
                                        </t>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
            </div>
        </div>
    </template>
