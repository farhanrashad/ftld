    <template id="website_product_dynamic_carousel.product_tab_content" name="Collection coursol">
        <div class="container multi_product v_tab_prod_snip" t-if="obj" contentEditable="false">
            <div class="product_slide" t-if="obj">
                <div class="seaction-head">
                    <h2 t-field="obj.name" />
                </div>
            </div>
            <div class="product_tab_content" t-if="obj.tab_collection_ids">
                <div class="multi_tab_slider row">
                    <t t-foreach="obj.tab_collection_ids" t-as="collection">
                        <t t-set="len_p" t-value="len(obj.tab_collection_ids)" />
                        <div t-attf-class=" product_detail #{len_p==1 and 'col-md-12' or ''} #{len_p==2 and 'col-md-6' or ''} #{len_p==3 and 'col-md-4' or ''} #{len_p&gt;=4 and 'col-md-3' or ''}">
                            <div class="flex-wrap d-flex mt-filter-title">
                                <h2 class="filter_title" t-field="collection.name" />
                                <div class="single-slider2-see_all ml-auto">
                                    <a t-att-href="'/shop/product_collection/%s' % slug(collection)">See All</a>
                                </div>
                            </div>
                            <div id="vertical_slide" class="filter_value owl-carousel thumbnails-slides multi_slider" t-if="collection.product_ids">
                                <t t-set="max_qty" t-value="0" />
                                <t t-set="products" t-value="collection.product_ids.sudo().filtered(lambda p: p.product_id.website_published)"/>
                                <t t-foreach="products" t-as="product_x">
                                    <t t-if="max_qty&lt;=1">
                                        <div class="item" t-foreach="[products[x:x+prod_count] for x in range(0, len(products), prod_count)]" t-as="page_docs">
                                            <div t-foreach="page_docs" t-as="prod" class="slider_product">
                                                <t t-set="product" t-value="prod.product_id" />
                                                <t t-call="website_product_dynamic_carousel.snippet_products_item_list" />
                                                <t t-set="max_qty" t-value="max_qty+1" />
                                            </div>
                                        </div>
                                    </t>
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </template>
</odoo>